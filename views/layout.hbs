               <li class="nav-item">
                  <a href="/connect/mydonations" class="btn btn-warning me-2">My Donations</a>  {{!-- My donnations link --}}
               </li>
               <li class="nav-item">
                  <a href="/connect/favorite" class="btn btn-info me-2">My Favorite Items</a>  {{!-- Favorite Items link--}}
               </li>
                                 
               <li class="nav-item">
                  <a href="/connect/profile" class="btn btn-primary me-2">My Profile</a>
               </li>

               <li class="nav-item">
                     <a href="/connect/review" class="btn btn-outline-secondary">Review</a>
               </li>
                  
               {{else}}
                  <li class="nav-item">
                     <a href="/connect" class="btn btn-success me-2">Donate</a>
                  </li>

                  <li class="nav-item">
                     <a href="/connect" class="btn btn-primary me-2">Connect</a>
                  </li>
                                   
            {{/if}}
            </ul>
         </div>
      </nav>


